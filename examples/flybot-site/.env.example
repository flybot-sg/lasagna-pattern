# Flybot Site Environment Variables
# Copy to .env and fill in your values

# Mode: dev | dev-with-oauth2 | prod (default)
#   dev            - auto-login as owner, no OAuth needed
#   dev-with-oauth2 - test OAuth locally, requires GOOGLE_* vars
#   prod           - requires OAuth + SESSION_SECRET
BLOG_MODE=dev

# Server
BLOG_PORT=8080
BLOG_BASE_URL=http://localhost:8080

# Database (backend: mem, file, or s3)
DATAHIKE_BACKEND=mem
DATAHIKE_ID=blog
# For file backend:
# DATAHIKE_PATH=/path/to/db
# For s3 backend:
# DATAHIKE_BUCKET=my-bucket
# DATAHIKE_REGION=us-east-1

# Google OAuth (required for dev-with-oauth2 and prod)
# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Authorization
BLOG_OWNER_EMAILS=your@email.com
# BLOG_ALLOWED_EMAILS=@yourcompany\.com

# Session (required for prod, 32 hex chars)
# SESSION_SECRET=0123456789abcdef0123456789abcdef
SESSION_TIMEOUT=43200

# Initialization
BLOG_SEED=true
# BLOG_BACKUP_DIR=/path/to/backup
